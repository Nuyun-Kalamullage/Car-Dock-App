<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cardock">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logocardock"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logocardock"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarDock">
        <activity
            android:name=".ui.userRegistration"
            android:exported="false"
            android:parentActivityName=".ui.login.LoginActivity"/>
        <activity
            android:name=".ui.carRegister"
            android:exported="false"
            android:parentActivityName=".ui.landingPage"
            />
        <activity
            android:name=".ui.landingPage"
            android:exported="false"
            android:label="@string/title_activity_landing_page"
            android:parentActivityName=".ui.login.LoginActivity"
            android:theme="@style/Theme.CarDock.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"

            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>